<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vamoYvamo" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Vamo & Vamo</name>
    <description>
        ¡Dividí los gastos en un paso de forma fácil y compartilo con tus amigos!
    </description>
    <author email="8588kb@gmail.com">
        8588kb Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-admobpro" spec="~2.9.8" />
    <plugin name="cordova-plugin-x-socialsharing" spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git" />
    <plugin name="com.darktalker.cordova.screenshot" spec="https://github.com/gitawego/cordova-screenshot.git" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="14"/>
        <preference name="android-targetSdkVersion" value="17"/>

        <allow-intent href="market:*" />
        <icon src="www/res/android/logo_36x36.png" density="ldpi" />
        <icon src="www/res/android/logo_48x48.png" density="mdpi" />
        <icon src="www/res/android/logo_72x72.png" density="hdpi" />
        <icon src="www/res/android/logo_96x96.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~3.9.1" />
    <engine name="android" spec="~4.1.1" />
    <engine name="browser" spec="~4.0.0" />
</widget>
